        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow newsletter-card">
                    <div class="card-body p-5 text-center">
                        <h3 class="fw-bold mb-3">Get Travel Inspiration & Special Offers</h3>
                        <p class="mb-4">Sign up for our newsletter and be the first to know about new destinations and exclusive deals!</p>
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <form class="d-flex">
                                    <input type="email" class="form-control me-2 shadow-sm border-0" placeholder="Your email address">
                                    <button type="submit" class="btn btn-autumn rounded-pill">Subscribe</button>
                                </form>
                            </div>
